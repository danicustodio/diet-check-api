{
  "name": "diet-check-api",
  "version": "1.0.0",
  "description": "Node.js-based app designed to help users track and manage their dietary habits by logging meals",
  "main": "/dist/server.js",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check src/**/*.ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DaniCustodio/diet-check-api.git"
  },
  "keywords": [
    "node",
    "express",
    "diet",
    "api"
  ],
  "author": "Dani Custodio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DaniCustodio/diet-check-api/issues"
  },
  "homepage": "https://github.com/DaniCustodio/diet-check-api#readme",
  "dependencies": {
    "@anatine/zod-nestjs": "^2.0.10",
    "@anatine/zod-openapi": "^2.2.7",
    "@nestjs/common": "^11.0.11",
    "@nestjs/core": "^11.0.11",
    "@nestjs/platform-express": "^11.0.11",
    "@nestjs/swagger": "^11.0.6",
    "bcryptjs": "^3.0.2",
    "openapi3-ts": "^4.4.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "zod": "^3.24.2",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.5.1",
    "@nestjs/cli": "^11.0.5",
    "@nestjs/schematics": "^11.0.2",
    "@nestjs/testing": "^11.0.11",
    "@swc/cli": "^0.6.0",
    "@swc/core": "^1.11.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.9",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.7",
    "globals": "^16.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7"
